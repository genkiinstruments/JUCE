{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "Target Windows with the Visual Studio development environment.",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (Debug)",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "JUCE_BUILD_EXAMPLES": true
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (RelWithDebInfo)",
            "inherits": "x64-debug",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
        },
        {
            "name": "linux-default",
            "displayName": "Linux Debug",
            "description": "Sets Ninja generator, compilers, build and install directory, debug build type",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [ "Linux" ]
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },

        {
            "name": "wasm-debug",
            "displayName": "Config: WASM Debug",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "generator": "Unix Makefiles",
            "toolchainFile": "$env{HOME}/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
            "cacheVariables": {
                "JUCE_BUILD_EXAMPLES": true,
                "JUCE_EMSCRIPTEN_AUDIO_LOGGING": true,
                "EMSCRIPTEN_NATIVE_C_COMPILER": "gcc",
                "EMSCRIPTEN_NATIVE_CXX_COMPILER": "g++"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [ "Linux" ]
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "wasm-release",
            "displayName": "Config: WASM Release",
            "inherits": "wasm-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }

    ],
    "buildPresets": [
        {
            "name": "build-wasm-debug",
            "displayName": "WASM Debug",
            "configurePreset": "wasm-debug"
        },
        {
            "name": "build-wasm-release",
            "displayName": "WASM Release",
            "configurePreset": "wasm-release"
        }
    ]
}